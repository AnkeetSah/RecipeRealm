<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Page</title>
    <link rel="icon" type="image/png" href="./images/appLogo/fav.png">
    <link rel="stylesheet" href="/css/header.css">
    <style>
        body, h1, p, ul, li, a {
            margin: 0;
            padding: 0;
            list-style: none;
            text-decoration: none;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin-top: 70px;
        }

        header {
            background-color: #000;
            padding: 6px 7px;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #32CD32;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            margin-right: 20px;
        }

        .nav-links a {
            color: #fff;
            transition: color 0.3s;
        }

        .nav-links a:hover {
            color: #32CD32;
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .menu-icon {
                display: block;
                font-size: 24px;
                cursor: pointer;
                color: #fff;
            }

            .menu-icon:hover {
                color: #32CD32;
            }

            .nav-links.mobile {
                display: flex;
                flex-direction: column;
                gap: 10px;
                background: #000;
                position: absolute;
                top: 60px;
                right: 20px;
                padding: 20px;
                border-radius: 5px;
            }

            .nav-links.mobile a {
                color: #32CD32;
            }
        }

        @media (min-width: 769px) {
            .menu-icon {
                display: none;
            }
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            padding: 2rem;
        }

        .post-container {
            flex: 1;
            padding: 1rem;
            background-color: #1f1f1f;
            border-radius: 8px;
            margin-right: 2rem;
            display: flex;
            flex-wrap: wrap;
        }

        .post-container h2 {
            color: #00ff00;
        }

        .post-container p {
            color: #bfbfbf;
        }

        .sidebar {
            width: 200px;
            background-color: #1f1f1f;
            border-radius: 8px;
            padding: 1rem;
        }

        .sidebar a {
            display: block;
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: none;
            border-radius: 4px;
            background-color: #00ff00;
            color: #000000;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

        .sidebar a:hover {
            background-color: #00cc00;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                padding: 1rem;
            }

            .post-container {
                margin-right: 0;
                margin-bottom: 2rem;
            }

            .sidebar {
                width: 100%;
                padding: 0.5rem;
            }

            .sidebar a {
                padding: 0.75rem;
                margin-bottom: 1rem;
            }
        }

        @media (max-width: 480px) {
            .navbar h1 {
                font-size: 1.5rem;
            }

            .post-container h2 {
                font-size: 1.25rem;
            }

            .post-container p {
                font-size: 0.9rem;
            }

            .sidebar a {
                font-size: 0.9rem;
                padding: 0.5rem;
            }
        }

        .post {
            min-height: 165px;
            width: 150px;
            background: #000;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-right: 10px;
            padding: 0.5rem;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .post img {
            width: 100%;
            height: 100px;
            border-radius: 10px;
            object-fit: cover;
        }

        .post p {
            color: #bfbfbf;
            font-size: 0.9rem;
            text-align: center;
            margin: 0.5rem 0;
        }

        .post a {
            display: block;
            color: wheat;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: background-color 0.2s ease;
        }

        .post:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }

        .action {
            display: flex;
            align-items: center;
            justify-content: space-evenly;
            width: 190px;
        }

        .action button {
            background-color: #ff4d4d;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 0.3rem 0.5rem;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        .action button:hover {
            background-color: #cc0000;
        }

        @media (max-width:480px){
            .post {
                width: 120px;
            }
            .post-container{
                justify-content: space-around;
                overflow-y: scroll;
                height: 200px;
                margin-left: -15px;
                flex-wrap: nowrap;
                width: 100%;
            }
            .sidebar{
                margin-left: -10px;
                width: 100%;
            }
        }

        header img {
            height: 50px;
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="app-icon">
                <span class="app-name">
                    <img src="/images/appLogo/headerLogo.png" alt="">
                </span>
            </div>
            <div class="menu-icon">&#9776;</div>
            <ul class="nav-links">
                <li><a href="/home">Home</a></li>
                <li><a href="/home/recipe">Recipes</a></li>
                <li><a href="/home/account">Account</a></li>
                <li><a href="/home/leaderBoard">Leader-Board</a></li>
                <li><a href="/home/aboutus">About</a></li>
            </ul>
        </nav>
    </header>

    <div class="container">
        <div class="post-container">
            <% if (recipes && recipes.length) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="post">
                        <% if (recipe?.strMealThumb) { %>
                            <img src="<%= recipe?.strMealThumb %>" alt="Recipe Image">
                        <% } %>
                        <p><%= recipe?.strMeal %> <%= recipe?.dishName %></p>
                        <div class="action">
                            <button class="unsave-btn" data-id="<%= recipe?.idMeal || recipe?._id %>">Unsave</button>
                            <% if (recipe?.idMeal) { %>
                                <a href="/home/recipe/item/<%= recipe?.idMeal %>">View</a>
                            <% } else { %>
                                <a href="/home/recipe/item/<%= recipe?._id %>">View</a>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No posts available.</p>
            <% } %>
        </div>

        <div class="sidebar">
            <a href="/account/addDish">Add Dish</a>
            <a href="/account/userSavedRecipe" style="background-color: #000;color:white">Saved Posts</a>
            <a href="/account/postcreated">Created Posts</a>
            <a href="/logout">Log out</a>
        </div>
    </div>

    <script>
        const menuIcon = document.querySelector('.menu-icon');
        const navLinks = document.querySelector('.nav-links');

        menuIcon.addEventListener('click', () => {
            navLinks.classList.toggle('mobile');
        });

        // Handle Unsave buttons
        document.querySelectorAll('.unsave-btn').forEach(button => {
            button.addEventListener('click', async () => {
                const id = button.dataset.id;

                try {
                    const response = await fetch('/account/unsaveDish', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ id })
                    });

                    const data = await response.json();
                    if (response.ok) {
                        button.closest('.post').remove(); // Remove post from DOM
                        console.log(data.message);
                    } else {
                        alert(data.message || "Failed to unsave dish");
                    }
                } catch (err) {
                    console.error(err);
                    alert("An error occurred while unsaving the dish");
                }
            });
        });
    </script>
</body>
</html>
