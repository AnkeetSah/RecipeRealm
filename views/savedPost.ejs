<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User saved Recipe</title>
    <link rel="icon" type="image/png" href="/images/appLogo/fav.png">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body, h1, p, ul, li, a {
            margin: 0;
            padding: 0;
            list-style: none;
            text-decoration: none;
            box-sizing: border-box;
        }
        *,
        *::before,
        *::after {
          box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #121212;
            color: #ffffff;
            margin-top: 70px;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            padding: 2rem 80px;
        }

        .post-container {
            flex: 1;
            padding: 1.5rem;
            background-color: #1f1f1f;
            border-radius: 12px;
            margin-right: 2rem;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }

        .post-container h2 {
            color: #00ff00;
        }

        .post-container p {
            color: #bfbfbf;
        }

        .sidebar {
            width: 200px;
            background-color: #1f1f1f;
            border-radius: 8px;
            padding: 1rem;
        }

        .sidebar a {
            display: block;
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: none;
            font-weight: bolder;
            border-radius: 4px;
            background-color: #00ff00;
            color: #000000;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

        .sidebar a:hover {
            background-color: #00cc00;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                padding: 1rem;
            }

            .post-container {
                margin-right: 0;
                margin-bottom: 2rem;
            }

            .sidebar {
                width: 100%;
                padding: 0.5rem;
            }

            .sidebar a {
                padding: 0.75rem;
                margin-bottom: 1rem;
            }
        }

        @media (max-width: 480px) {
            .navbar h1 {
                font-size: 1.5rem;
            }

            .post-container h2 {
                font-size: 1.25rem;
            }

            .post-container p {
                font-size: 0.9rem;
            }

            .sidebar a {
                font-size: 0.9rem;
                padding: 0.5rem;
            }
        }

        /* Enhanced Card Styles with Green Theme */
        .post {
            width: 280px;
            
            background: black;
            border-radius: 16px;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            margin-bottom: 25px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
            position: relative;
             padding: 1rem;
            border: 3px solid rgba(255, 255, 255, 0.05);
        }

        .post:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
           
            border-color: rgba(49, 249, 14, 0.3);
        }

        .post-image-container {
            position: relative;
            width: 100%;
            height: 180px;
            overflow: hidden;
        }

        .post img {
            width: 100%;
            height: 100%;
            border-radius: 8px;
            object-fit: cover;
            margin-bottom: 0.75rem;
            transition: transform 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        .post:hover img {
            transform: scale(1.05);
        }

        .post-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, transparent 60%, rgba(0, 0, 0, 0.8));
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            align-items: flex-end;
            padding: 15px;
        }

        .post:hover .post-overlay {
            opacity: 1;
        }

        .recipe-category {
            background-color: #00cc00;
            color: white;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .post-content {
            padding: 1.2rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .post-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.8rem;
            color: #ffffff;
            line-height: 1.3;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .recipe-meta {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            font-size: 0.85rem;
            color: #999;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .meta-item i {
            color: #00cc00;
        }

        .action {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: auto;
        }

        .unsave-btn {
            background: linear-gradient(to right, #ff4d4d, #ff3333);
            color: white;
            border: none;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s ease;
            box-shadow: 0 2px 5px rgba(255, 77, 77, 0.2);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .unsave-btn:hover {
            background: linear-gradient(to right, #ff3333, #ff1a1a);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(255, 77, 77, 0.3);
        }

        .view-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(to right, #00cc00, #00b300);
            color: white;
            border-radius: 6px;
            padding: 0.5rem 1rem;
            text-align: center;
            font-weight: 500;
            transition: all 0.2s ease;
            text-decoration: none;
            box-shadow: 0 2px 5px rgba(0, 204, 0, 0.2);
        }

        .view-btn:hover {
            background: linear-gradient(to right, #00b300, #009900);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 204, 0, 0.3);
        }

        .empty-state {
            width: 100%;
            text-align: center;
            padding: 2rem;
            color: #888;
        }

        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .empty-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
            color: #00cc00;
        }

        @media (max-width: 768px) {
            .post {
                width: calc(50% - 10px);
            }
        }

        @media (max-width: 480px) {
            .post {
                width: 100%;
            }
            .post-container{
                justify-content: space-around;
                overflow-y: scroll;
                height: 200px;
                
                flex-wrap: wrap;
                width: 100%;
            }
            .sidebar{
               
                width: 100%;
            }
        }

        header img {
            height: 50px;
        }
    </style>
</head>
<body>
    <%- include("./header") %>

    <div class="container">
        <div class="post-container">
            <% if (recipes && recipes.length) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="post">
                        <div class="post-image-container">
                            <% if (recipe?.strMealThumb) { %>
                                <img src="<%= recipe?.strMealThumb %>" alt="Recipe Image">
                            <% } else { %>
                                <img src="/images/placeholder-recipe.jpg" alt="Recipe Placeholder">
                            <% } %>
                            <div class="post-overlay">
                                <span class="recipe-category">
                                    <% if (recipe?.strCategory) { %>
                                        <%= recipe.strCategory %>
                                    <% } else { %>
                                        Recipe
                                    <% } %>
                                </span>
                            </div>
                        </div>
                        <div class="post-content">
                            <h3 class="post-title"><%= recipe?.strMeal %> <%= recipe?.dishName %></h3>
                            
                            
                            
                            <div class="action">
                                <button class="unsave-btn" data-id="<%= recipe?.idMeal || recipe?._id %>">
                                    <i class="fas fa-bookmark"></i> Unsave
                                </button>
                                <% if (recipe?.idMeal) { %>
                                    <a href="/home/recipe/item/<%= recipe?.idMeal %>" class="view-btn">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                <% } else { %>
                                    <a href="/home/recipe/item/<%= recipe?._id %>" class="view-btn">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-bookmark"></i>
                    </div>
                    <p>No saved recipes yet</p>
                    <p>Start saving your favorite recipes to see them here!</p>
                </div>
            <% } %>
        </div>

        <div class="sidebar">
            <a href="/account/addDish">Add Dish</a>
            <a href="/account/userSavedRecipe" style="background-color: #000;color:white;border: 1px solid #00cc00">Saved Posts</a>
            <a href="/account/postcreated">Created Posts</a>
            <a href="/account/logout">Log out</a>
        </div>
    </div>

    <script>
        

        // Handle Unsave buttons
        document.querySelectorAll('.unsave-btn').forEach(button => {
            button.addEventListener('click', async () => {
                const id = button.dataset.id;

                try {
                    const response = await fetch('/account/unsaveDish', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ id })
                    });

                    const data = await response.json();
                    if (response.ok) {
                        // Add removal animation
                        const post = button.closest('.post');
                        post.style.opacity = '0';
                        post.style.transform = 'scale(0.8)';
                        
                        setTimeout(() => {
                            post.remove();
                            
                            // Check if no posts remain
                            if (document.querySelectorAll('.post').length === 0) {
                                document.querySelector('.post-container').innerHTML = `
                                    <div class="empty-state">
                                        <div class="empty-icon">
                                            <i class="fas fa-bookmark"></i>
                                        </div>
                                        <p>No saved recipes yet</p>
                                        <p>Start saving your favorite recipes to see them here!</p>
                                    </div>
                                `;
                            }
                        }, 300);
                        
                        console.log(data.message);
                    } else {
                        alert(data.message || "Failed to unsave dish");
                    }
                } catch (err) {
                    console.error(err);
                    alert("An error occurred while unsaving the dish");
                }
            });
        });
    </script>
</body>
</html>