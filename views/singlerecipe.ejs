<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipe Finder</title>
  <link rel="icon" type="image/png" href="./images/appLogo/fav.png">
  <link rel="stylesheet" href="/css/header.css">

  <style>
    * {
      padding: 0;
      margin: 0;
      box-sizing: border-box;
      font-family: "Segoe UI", Arial, sans-serif;
    }

    body {
      background-color: #111;
      color: #eee;
      padding-top: 70px;
    }

    main {
      max-width: 900px;
      margin: 3rem auto;
      padding: 1rem;
      text-align: center;
    }

    h1.page-title {
      font-size: 2.2rem;
      margin-bottom: 2rem;
      color: #20f803;
      letter-spacing: 1px;
      text-shadow: 0 0 6px rgba(32, 248, 3, 0.6);
    }

    form {
      margin: 2rem auto;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    label {
      font-size: 1rem;
      color: #20f803;
    }

    input[type="text"] {
      padding: 0.6rem 1rem;
      border-radius: 8px;
      border: 2px solid #20f803;
      background: #000;
      color: #20f803;
      outline: none;
      font-size: 1rem;
      width: 280px;
      transition: box-shadow 0.2s ease, transform 0.2s ease;
    }

    input[type="text"]:focus {
      box-shadow: 0 0 10px #20f803;
      transform: scale(1.03);
    }

    button {
      padding: 0.6rem 1.4rem;
      border: none;
      border-radius: 8px;
      background: #20f803;
      color: #000;
      font-weight: bold;
      cursor: pointer;
      font-size: 1rem;
      transition: background 0.2s ease, transform 0.2s ease;
    }

    button:hover {
      background: #1bd002;
      transform: scale(1.05);
    }

    .clear-btn {
      margin-top: 1rem;
      background: #000;
      color: #20f803;
      border: 1px solid #20f803;
      display: none;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .clear-btn.show {
      display: inline-block;
      opacity: 1;
    }

    .results {
      margin-top: 2rem;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 1.5rem;
    }

    .recipe-card {
      background: #1a1a1a;
      border: 2px solid #32cd32;
      border-radius: 12px;
      padding: 1rem;
      text-align: center;
      box-shadow: 0 4px 12px rgba(0,255,0,0.15);
      transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

    .recipe-card:hover {
      transform: translateY(-5px) scale(1.02);
      
      box-shadow: 0 8px 18px rgba(0,255,0,0.25);
    }

    .recipe-card img {
      width: 100%;
      border-radius: 8px;
      margin-bottom: 0.8rem;
    }

    .recipe-card h3 {
      color: #20f803;
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }

    .recipe-card a {
      display: inline-block;
      padding: 0.5rem 1rem;
      margin-top: 0.5rem;
      border-radius: 6px;
      background: #20f803;
      color: #000;
      font-weight: bold;
      text-decoration: none;
      transition: background 0.2s ease, transform 0.2s ease;
    }

    .recipe-card a:hover {
      background: #1bd002;
      transform: scale(1.05);
    }

    /* Loader */
    .loader {
      border: 4px solid #333;
      border-top: 4px solid #20f803;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      margin: 1rem auto;
      animation: spin 0.8s linear infinite;
    }

    @keyframes spin {
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <%- include("./header") %>

  <main>
    <h1 class="page-title">Enter the ingredient and find recipes</h1>

    <form id="searchForm">
      <label for="ingredient">Ingredient:</label>
      <input id="ingredient" type="text" placeholder="e.g. chicken, tomato">
      <button id="Submit">Search</button>
    </form>

    <!-- Clear Results Button -->
    <button id="clearBtn" class="clear-btn">Clear Results</button>

    <!-- Results -->
    <div class="results" id="results"></div>
  </main>

<script>
  const form = document.getElementById("searchForm");
  const inputBox = document.getElementById("ingredient");
  const resultsDiv = document.getElementById("results");
  const clearBtn = document.getElementById("clearBtn");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const query = inputBox.value.trim();
    if (!query) return;

    resultsDiv.innerHTML = "<div class='loader'></div>"; // Loader

    try {
      // Call your backend API which merges both your recipes and MealDB recipes
      const res = await fetch("/allUserPost/ingredient", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ ingredient: query })
      });

      const data = await res.json();

      if (data.length > 0) {
        resultsDiv.innerHTML = data.map(meal => `
          <div class="recipe-card">
           
            <img src="${meal.strMealThumb}" alt="${meal.strMealThumb}">
            <h3>${meal.strMeal}</h3>
            <a href="/home/recipe/item/${meal.idMeal}">View Recipe</a>
          </div>
        `).join("");
      } else {
        resultsDiv.innerHTML = "<p style='color:red;'>No recipes found for that ingredient.</p>";
      }

      clearBtn.classList.add("show"); 
    } catch (error) {
      resultsDiv.innerHTML = "<p style='color:red;'>Error fetching recipes.</p>";
      clearBtn.classList.add("show");
      console.error(error);
    }
  });

  clearBtn.addEventListener("click", () => {
    resultsDiv.innerHTML = "";
    inputBox.value = "";
    clearBtn.classList.remove("show");
  });
</script>

</body>
</html>
