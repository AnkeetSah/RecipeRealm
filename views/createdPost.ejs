<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile Page</title>
    <style>
        body, h1, p, ul, li, a {
            margin: 0;
            padding: 0;
            list-style: none;
            text-decoration: none;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #121212;
            color: #ffffff;
        }

        header {
            background-color: #000;
            padding: 6px 7px;
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #32CD32;
        }

        .nav-links {
            display: flex;
            gap: 20px;
            margin-right: 20px;
        }

        .nav-links a {
            color: #fff;
            transition: color 0.3s;
        }

        .nav-links a:hover {
            color: #32CD32;
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .menu-icon {
                display: block;
                font-size: 24px;
                cursor: pointer;
                color: #fff;
            }

            .menu-icon:hover {
                color: #32CD32;
            }

            .nav-links.mobile {
                display: flex;
                flex-direction: column;
                gap: 10px;
                background: #000;
                position: absolute;
                top: 60px;
                right: 20px;
                padding: 20px;
                border-radius: 5px;
            }

            .nav-links.mobile a {
                color: #32CD32;
            }
        }

        @media (min-width: 769px) {
            .menu-icon {
                display: none;
            }
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            padding: 2rem;
        }

        .post-container {
            flex: 1;
            padding: 1rem;
            background-color: #1f1f1f;
            border-radius: 8px;
            margin-right: 2rem;
            display: flex;
            flex-wrap: wrap;
        }

        .post-container h2 {
            color: #00ff00;
        }

        .post-container p {
            color: #bfbfbf;
        }

        .sidebar {
            width: 200px;
            background-color: #1f1f1f;
            border-radius: 8px;
            padding: 1rem;
        }

        .sidebar a {
            display: block;
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 1rem;
            border: none;
            border-radius: 4px;
            background-color: #00ff00;
            color: #000000;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

        .sidebar a:hover {
            background-color: #00cc00;
        }

        /* Media Queries for Responsive Design */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                padding: 1rem;
            }

            .post-container {
                margin-right: 0;
                margin-bottom: 2rem;
            }

            .sidebar {
                width: 100%;
                padding: 0.5rem;
            }

            .sidebar a {
                padding: 0.75rem;
                margin-bottom: 1rem;
            }
        }

        @media (max-width: 480px) {
            .navbar h1 {
                font-size: 1.5rem;
            }

            .post-container h2 {
                font-size: 1.25rem;
            }

            .post-container p {
                font-size: 0.9rem;
            }

            .sidebar a {
                font-size: 0.9rem;
                padding: 0.5rem;
            }

            .post-container{
                justify-content: space-around;
                overflow-y: scroll;
                height: 200px;
                margin-left: -15px;
                flex-wrap: nowrap;
                width: 100%;
              }
              .sidebar{
                margin-left: -10px;
              }
        }

        .post {
           min-height: 165px;
            min-width: 150px;
            background: #000;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-right: 10px;
            padding: 0.5rem;
            
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .post img {
            width: 100%;
            height: 100px;
            border-radius: 10px;
            object-fit: cover;
           
        }

        .post p {
            color: #bfbfbf;
            font-size: 0.9rem;
            text-align: center;
            margin: 0.5rem 0;
        }

        .post a {
           
            display: block;
            
            
            color: wheat;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: background-color 0.2s ease;
        }

        

        .post:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        }
        .action{
            display: flex;
            align-items: center;
            justify-content: space-evenly;
            
            width: 190px;
        }
        
        .action a{
            display: block;
            
        }
        header img{
            height: 50px;
           
            position: relative;
        
        }
    </style>
</head>
<body>
    <header>
        <nav>
            <div class="app-icon">
                <!-- You can replace "Recipe App" with your preferred app name -->
                <span class="app-name">
                    <img src="/images/appLogo/headerLogo.png" alt="">
                </span>
            </div>
            <div class="menu-icon">&#9776;</div>
            <ul class="nav-links">
                <li><a href="/home">Home</a></li>
                <li><a href="/home/recipe">Recipes</a></li>
                <li><a href="/home/account">Account</a></li>
                <li><a href="/home/leaderBoard">Leader-Board</a></li>
                <li><a href="/home/aboutus">About</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <div class="post-container">
            
           <% post.forEach(post=>{ %>
                <div class="post">
                    <img src="/images/uploads/<%= post.filename %>" alt="">
                    <p><%= post.dishName%></p>
                    <div class="action">
                        <p><%= post.total_likes.length  %>-Likes</p>
                        <a href="/postEdit/<%= post._id %>">Edit</a>
                        <a href="/postDelete/<%= post._id %>">Delete</a>
                        <a href="/seeRecipe/<%= post._id %>">View</a>
                    </div>
                   
                   </div>
          <%  }) %>


        </div>
        <div class="sidebar">
            <a href="/account/addDish">Add Dish</a>
            <a href="/account/userSavedRecipe">Saved Posts</a>
            <a href="/account/postcreated" style="background-color: #000;color:white">Created Posts</a>
            <a href="/logout">Log out</a>
        </div>
    </div>

    <script>
        const menuIcon = document.querySelector('.menu-icon');
        const navLinks = document.querySelector('.nav-links');

        menuIcon.addEventListener('click', () => {
            navLinks.classList.toggle('mobile');
        });
    </script>
</body>
</html>
