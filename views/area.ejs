<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Country List</title>
    <link rel="icon" type="image/png" href="/images/appLogo/fav.png">
    <link rel="stylesheet" href="/css/header.css">

    <style>
      /* Reset */
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        color: #ffffff;
        background-color: #121212;
        overflow-x: hidden;
        padding-top: 100px;
      }

      /* Container */
      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        margin-top: 30px;
        
        gap: 20px;
        animation: fadeInUp 1s ease;
      }

      /* Card */
      .child {
        background: linear-gradient(145deg, #1b1b1b, #222);
        border: 1px solid #2a2a2a;
        border-radius: 15px;
        width: 220px;
        padding: 15px;
        text-align: center;
        box-shadow: 0 6px 15px rgba(0,0,0,0.6);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        opacity: 0;
        animation: fadeInCard 0.8s ease forwards;
      }

      .child:hover {
        transform: translateY(-10px) scale(1.05);
        box-shadow: 0 10px 20px rgba(0,255,0,0.3);
      }

      .child:nth-child(odd) {
        animation-delay: 0.2s;
      }
      .child:nth-child(even) {
        animation-delay: 0.4s;
      }

      /* Food Image */
      .foodimage {
        width: 100%;
        height: 140px;
        border-radius: 12px;
        object-fit: cover;
        margin-bottom: 12px;
        transition: transform 0.4s ease;
      }

      .child:hover .foodimage {
        transform: scale(1.08);
      }

      /* Food Title */
      .foodname {
        font-size: 18px;
        color: #ffffff;
        margin-bottom: 10px;
        font-weight: 500;
        letter-spacing: 0.5px;
      }

      /* Button */
      .show-btn {
        background-color: #00ff00;
        color: #000000;
        border: none;
        padding: 10px 20px;
        font-size: 15px;
        cursor: pointer;
        border-radius: 8px;
        font-weight: bold;
        transition: all 0.3s ease;
        display: inline-block;
      }

      .show-btn:hover {
        background-color: #00cc00;
        transform: scale(1.05);
        box-shadow: 0 0 10px #00ff00;
      }

      /* Responsive */
      @media (max-width: 450px) {
        .child {
          width: 160px;
          padding: 8px;
        }
        .foodimage {
          height: 110px;
        }
        .foodname {
          font-size: 16px;
        }
        .show-btn {
          font-size: 14px;
          padding: 8px 14px;
        }
        .container {
          padding: 0;
        }
      }

      

      

      /* Animations */
      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
      }

      @keyframes fadeInCard {
        from { opacity: 0; transform: translateY(40px); }
        to { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>
  <body>
    <%- include("./header") %>
    
          <h1 style="color: #00ff00; text-align:center;">Search By Country</h1>
     
    <div class="container">
      <% data.forEach(data => { %>
      <div class="child">
        <img src="<%= data.image %>" class="foodimage" alt="<%= data.name %>" />
        <h3 class="foodname"><%= data.name %></h3>
        <a class="show-btn" href="/places/<%= data.name %>">Explore Cuisine</a>
      </div>
      <% }) %>
    </div>

    
  </body>
</html>
