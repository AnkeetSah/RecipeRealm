<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recipe App - Food List</title>
    <style>
      /* Reset some default browser styles */
      * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
      }

      body,
      h1,
      p,
      ul,
      li,
      a {
        margin: 0;
        padding: 0;
        list-style: none;
        text-decoration: none;
        box-sizing: border-box;
      }

      /* General body styling */
      body {
        font-family: Arial, sans-serif;
        color: #ffffff;
        background-color: #121212;
      }

      /* Header styling */
      header {
        background-color: #1b1b1b;
        padding: 6px 7px;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
      }

      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .logo {
        font-size: 24px;
        font-weight: bold;
        color: #00ff00;
      }

      .nav-links {
        display: flex;
        gap: 20px;
        margin-right: 20px; /* Move links a bit to the left */
      }

      .nav-links a {
        color: #ffffff;
        transition: color 0.3s;
      }

      .nav-links a:hover {
        color: #00ff00;
      }

      .menu-icon {
        display: none;
        font-size: 24px;
        cursor: pointer;
        color: #ffffff;
      }

      .menu-icon:hover {
        color: #00ff00;
      }

      /* Container styling */
      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        margin-top: 100px; /* Adjusted margin to avoid content hiding under the fixed header */
        padding: 20px;
      }

      .child {
        background-color: #ffffff;
        border: 2px solid #ddd;
        border-radius: 10px;
        width: 200px;
        margin: 10px;
        padding: 15px;
        
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .foodimage {
        width: 100%;
        height: 110px;
        border-radius: 10px;
        object-fit: cover;
        margin-bottom: 10px;
      }

      .foodname {
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
      }

      .show-btn {
        background-color: #00ff00;
        color: #000000;
        border: none;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin-top: 10px;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s;
      }

      .show-btn:hover {
        background-color: #00cc00;
      }

      @media (max-width: 450px) {
        .child {
          width: 150px;
          margin-left: 3px;
          padding: 3px;
        }
        .show-btn {
          margin-top: 0px;
        }
        .foodname {
          margin-top: -2px;
          font-size: 16px;
        }
        .container{
          padding: 0px;
        }
      }

      

      @media (max-width: 768px) {
        .nav-links {
          display: none;
        }

        .menu-icon {
          display: block;
        }

        .nav-links.mobile {
          display: flex;
          flex-direction: column;
          gap: 10px;
          background: #1b1b1b;
          position: absolute;
          top: 60px;
          right: 20px;
          padding: 20px;
          border-radius: 5px;
        }

        .nav-links.mobile a {
          color: #00ff00;
        }
      }

      @media (min-width: 769px) {
        .menu-icon {
          display: none;
        }
      }
      header img{
        height: 50px;
       
        position: relative;
    
    }
    </style>
  </head>
  <body>
    <header>
      <nav>
        <div class="app-icon">
          <!-- You can replace "Recipe App" with your preferred app name -->
          <span class="app-name">
              <img src="/images/appLogo/headerLogo.png" alt="">
          </span>
      </div>
        <div class="menu-icon">&#9776;</div>
        <ul class="nav-links">
          <li><a href="/home">Home</a></li>
          <li><a href="/home/recipe">Recipes</a></li>
          <li><a href="/home/account">Account</a></li>
          <li><a href="/home/leaderBoard">Leader-Board</a></li>
          <li><a href="/home/aboutus">About</a></li>
        </ul>
      </nav>
    </header>

    <div class="container">
      <% data.forEach(data => { %>
      <div class="child">
        <img src="<%= data.image %>" class="foodimage" alt="<%= data.name %>" />
        <h3 class="foodname"><%= data.name %></h3>
        <a class="show-btn" href="/places/<%= data.name %>">Explore Cuisine</a>
      </div>
      <% }) %>
    </div>

    <script>
      const menuIcon = document.querySelector(".menu-icon");
      const navLinks = document.querySelector(".nav-links");

      menuIcon.addEventListener("click", () => {
        navLinks.classList.toggle("mobile");
      });
    </script>
  </body>
</html>
